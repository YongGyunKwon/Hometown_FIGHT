<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RoomMake">


    <LinearLayout
            android:layout_width="353dp"
            android:layout_height="721dp" tools:layout_editor_absoluteX="22dp"
            android:orientation="vertical" app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="6dp">
        <TextView
                android:text="게임 생성"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:autoSizeMinTextSize="50dp"
                android:id="@+id/textView2"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="36sp"
                android:textStyle="bold"
                android:typeface="normal"/>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <TextView
                android:layout_width="101dp"
                android:layout_height="34dp"
                android:text="제목"
                android:id="@+id/textView3"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        <EditText
                android:id="@+id/room_subject"
                android:layout_width="match_parent"
                android:layout_height="52dp"
                android:inputType="textPersonName"
                android:hint="Subject"
                android:ems="10"
                tools:ignore="MissingConstraints"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"/>
        <TextView
                android:text="날짜(Date)"
                android:layout_width="101dp"
                android:layout_height="34dp"
                android:id="@+id/Datetext"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        <EditText
                android:hint="YYYY-DD-MM"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/date"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="4dp"/>
        <EditText
                android:hint="time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="time"
                android:ems="10"
                android:id="@+id/time1"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="14dp"/>
        <TextView

                android:text="위치(Location)"
                android:layout_width="108dp"
                android:layout_height="24dp"
                android:id="@+id/locationtext"
        />
        <Space
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
        <EditText
                android:hint="location(ex.한화이글스파크)"
                android:layout_width="match_parent"
                android:layout_height="41dp"
                android:inputType="textMultiLine"
                android:gravity="start|top"
                android:ems="10"
                android:id="@+id/location"
        />
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                <TableRow android:layout_width="wrap_content" android:layout_height="wrap_content">
                    <TextView
                            android:text="위도"
                            android:layout_width="110dp"
                            android:layout_height="17dp"
                            android:id="@+id/lat"
                    />
                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <TextView
                            android:text="경도"
                            android:layout_width="110dp"
                            android:layout_height="18dp"
                            android:id="@+id/lng"
                    />
                </TableRow>
                <TableRow android:layout_width="match_parent" android:layout_height="match_parent">
                    <Space
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"/>
                    <Button
                            android:text="주소입력완료"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/address"
                            android:background="@color/common_google_signin_btn_text_dark_disabled"
                    />
                    <Button
                            android:text="Map"
                            android:layout_width="98dp"
                            android:layout_height="39dp"
                            android:id="@+id/mapview"
                            android:background="@color/common_google_signin_btn_text_dark_disabled"
                    />
                </TableRow>
            </TableLayout>
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="37dp">
            <TextView
                    android:text="Home"
                    android:layout_width="58dp"
                    android:layout_height="match_parent"
                    android:id="@+id/textView"
            />
            <Space
                    android:layout_width="235dp"
                    android:layout_height="match_parent" android:layout_weight="0"/>
            <TextView
                    android:text="Away"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/textView4"
            />
        </LinearLayout>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="110dp">
            <NumberPicker

                    android:id="@+id/homepicker"

                    android:layout_width="61dp"

                    android:layout_height="110dp"

                    android:background="#00FFFFFF"
            />
            <Space
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" android:layout_weight="1"/>
            <NumberPicker

                    android:id="@+id/awaypicker"

                    android:layout_width="61dp"

                    android:layout_height="110dp"

                    android:background="#00FFFFFF"
            />
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="15dp"/>
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="36dp">
            <Button
                    android:text="@android:string/cancel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/canceladdgame"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"
            />
            <Space
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_weight="1"/>
            <Button
                    android:text="submit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/submitaddgame"
                    android:background="@color/common_google_signin_btn_text_dark_disabled"
            />
        </LinearLayout>
        <Space
                android:layout_width="match_parent"
                android:layout_height="34dp"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>