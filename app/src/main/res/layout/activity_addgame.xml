<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".RoomMake">


    <TextView
            android:text="게임 만들기"
            android:layout_width="214dp"
            android:layout_height="64dp"
            android:autoSizeMinTextSize="50dp"
            android:id="@+id/textView2"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textSize="36sp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="33dp" android:layout_marginLeft="88dp" android:layout_marginStart="88dp"/>
    <TextView
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:text="제목"
            android:id="@+id/textView3"
            android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" app:layout_constraintEnd_toStartOf="@+id/textView2"
            android:layout_marginBottom="13dp" app:layout_constraintBottom_toTopOf="@+id/room_subject"
            app:layout_constraintStart_toStartOf="@+id/room_subject" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" android:layout_marginEnd="5dp" android:layout_marginRight="5dp"/>
    <EditText
            android:id="@+id/room_subject"
            android:layout_width="0dp"
            android:layout_height="49dp"
            android:inputType="textPersonName"
            android:text="Subject"
            android:ems="10"
            tools:ignore="MissingConstraints"
            android:layout_marginTop="71dp"
            app:layout_constraintTop_toBottomOf="@+id/textView2" android:layout_marginBottom="74dp"
            app:layout_constraintEnd_toEndOf="@+id/editText2" app:layout_constraintStart_toStartOf="@+id/textView"
            app:layout_constraintBottom_toBottomOf="@+id/textView" android:layout_marginEnd="1dp"
            android:layout_marginRight="1dp"/>
    <TextView
            android:text="날짜(Date)"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/textView"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="20dp"
            android:layout_marginStart="20dp" android:layout_marginBottom="51dp"
            app:layout_constraintBottom_toTopOf="@+id/editText4"/>
    <EditText
            android:layout_width="323dp"
            android:layout_height="0dp"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/editText2"
            app:layout_constraintStart_toStartOf="@+id/textView" android:layout_marginLeft="4dp"
            android:layout_marginStart="4dp" app:layout_constraintTop_toBottomOf="@+id/textView"
            app:layout_constraintBottom_toTopOf="@+id/editText4"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="46dp"
            android:inputType="time"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintEnd_toEndOf="@+id/editText2" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="@+id/textView" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="3dp" android:layout_marginRight="3dp"/>
    <EditText
            android:layout_width="0dp"
            android:layout_height="62dp"
            android:inputType="textMultiLine"
            android:gravity="start|top"
            android:ems="10"
            android:id="@+id/editText6"
            app:layout_constraintEnd_toEndOf="@+id/editText2" android:layout_marginBottom="172dp"
            app:layout_constraintStart_toStartOf="@+id/editText4" android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginEnd="9dp" android:layout_marginRight="9dp"/>
    <TextView

            android:text="comment"
            android:layout_width="108dp"
            android:layout_height="34dp"
            android:id="@+id/textView4"
            app:layout_constraintTop_toTopOf="@+id/editText4" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="97dp" android:layout_marginLeft="28dp"
            app:layout_constraintBottom_toBottomOf="@+id/editText6" android:layout_marginStart="28dp"
            android:layout_marginBottom="86dp"/>
    <Button
            android:text="@android:string/cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/button2"
            android:backgroundTint="#B63737"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="28dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="28dp"
            android:layout_marginBottom="32dp"/>
    <Button
            android:text="submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/submit" android:backgroundTint="#1017E4"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginEnd="51dp"
            android:layout_marginRight="51dp" android:layout_marginBottom="32dp"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>